apiVersion: v1
kind: Pod
metadata:
  name: {{ item.name }}-{{ seq }}
  namespace: {{ namespace }}
spec:
  containers:
  - name: {{ item.name }}-{{ seq }}
    image: {{ image_path }}
    imagePullPolicy: always
    ports: 
      - containerPort: {{ httpget_port }}
    readinessProbe:
      httpGet:
        path: {{ httpget_path}}
        port: {{ httpget_port }}
      initialDelaySeconds: 30
      periodSeconds: 5
      timeoutSeconds: 5
      failureThreshold: 240
    resources:
      limits:
        memory: {{ item.memory_test_limits }}
        cpu: {{ item.cpu_test_limits }}
      requests:
        memory: {{ item.memory_test_requests }}
        cpu: {{ item.cpu_test_requests }}
