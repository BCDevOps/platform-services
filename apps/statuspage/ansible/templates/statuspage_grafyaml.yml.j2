#jinja2:lstrip_blocks: True
dashboard:
  title: BCGov DevHub Status Page
  time:
      from: "now-15m"
      to: "now"
  rows:
    - title: Description
      showTitle: false
      height: 50px
      panels:
        - title: Description
          content: |
            ### This dashboard shows the status of various BCGov Developer Platform Resources. This dashboard is auto-generated and should not be edited manually.    
            #### Table of Contents  
            - Internal Services: This section represents internal services in the cluster that are required for the platform to operate.  
            - External Services: This section represents external urls that the system is checking on in order to identify up/down status. These are simple checks and are not subscribing to individual service status page feeds. 
            - Operations Notices:  This section presents the latest operational notices that are useful to platform members. The latest notice is also posted to Rocket.Chat.  
          type: text
    - title: Internal Services
      showTitle: true
      height: 200px
      panels:
{% for obj in url_watchlist['internal_services_tls_verify'] | dict2items %}
        - title: {{ obj.key }} 
          datasource: Prometheus
          span: 1
          thresholds: -0.5,0
          colorBackground: true
          targets:
            - expr: probe_success{instance="{{ obj.value }}",job="blackbox_tls_verify"}*-1
              refId: A
          type: singlestat
          valueName: current
          valueMaps:
             - value: 0
               text: 'DOWN'
             - value: -1
               text: 'UP'
          valueFontSize: "100%"
{% endfor %}
{% for obj in url_watchlist['internal_services_no_tls_verify'] | dict2items %}
        - title: {{ obj.key }} 
          datasource: Prometheus
          span: 1
          thresholds: -0.5,0
          colorBackground: true
          targets:
            - expr: probe_success{instance="{{ obj.value }}",job="blackbox_no_tls_verify"}*-1
              refId: A
          type: singlestat
          valueName: current
          valueMaps:
             - value: 0
               text: 'DOWN'
             - value: -1
               text: 'UP'
          valueFontSize: "100%"
{% endfor %}
{% for obj in url_watchlist['ocp_green_status'] | dict2items %}
        - title: {{ obj.key }} 
          datasource: Prometheus
          span: 1
          thresholds: -0.5,0
          colorBackground: true
          targets:
            - expr: probe_success{instance="{{ obj.value }}",job="http_ocp_status_green"}*-1
              refId: A
          type: singlestat
          valueName: current
          valueMaps:
             - value: 0
               text: 'DOWN'
             - value: -1
               text: 'UP'
          valueFontSize: "100%"
{% endfor %}
        - title: DNS Resolution Time(s)
          datasource: Prometheus
          span: 1
          thresholds: 0,0.5,1
          colorBackground: true
          sparkline:
            full: true
            show: true
          targets:
            - expr: max(probe_dns_lookup_time_seconds)
              refId: A
          type: singlestat
          valueName: current
          valueFontSize: "100%"
    - title: Upstream Services
      showTitle: true
      height: 200px
      panels:
{% for obj in url_watchlist['upstream_services'] | dict2items %}
        - title: {{ obj.key }} 
          datasource: Prometheus
          span: 1
          thresholds: -0.5,0
          colorBackground: true
          targets:
            - expr: probe_success{instance="{{ obj.value }}",job="blackbox_tls_verify"}*-1
              refId: A
          type: singlestat
          valueName: current
          valueMaps:
             - value: 0
               text: 'DOWN'
             - value: -1
               text: 'UP'
          valueFontSize: "100%"
{% endfor %}
    - title: Status Codes
      showTitle: true
      height: 400px
      panels:
        - title: HTTP Status Codes
          datasource: Prometheus
          span: 12
          targets:
            - expr: probe_http_status_code
              format: time_series
              intervalFactor: 1
              refId: A
{% raw %}
              legendFormat: "{{ instance }}"
{% endraw %}
          type: graph
    - title: Operations Notices
      showTitle: false
      height: 400px
      panels:
        - title: Operations Notices
          content: |

              {% for filename in notifications.stdout_lines %}
              # Notice: {{ filename }}

              {% set file_lines = lookup ('file', notifications_path+filename).splitlines() %}
              {% for line in file_lines %}
              ## {{ line }}

              {% endfor %}
              {% endfor %}

          type: text
