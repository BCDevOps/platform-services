---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: Role
metadata:
  labels:
    name: {{ enforcerd.name }}-privileged-role
  name: {{ enforcerd.name }}-privileged-role
  namespace: {{ aporeto_project.enforcers }}
rules:
- apiGroups:
  - security.openshift.io 
  resourceNames:
  - privileged 
  resources:
  - securitycontextconstraints 
  verbs: 
  - use
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  labels:
    name: {{ enforcerd.name }}-privileged-rb
  name: {{ enforcerd.name }}-privileged-rb
  namespace: {{ aporeto_project.enforcers }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: {{ enforcerd.name }}-privileged-role
subjects:
- kind: ServiceAccount
  name: {{ enforcerd.name }}
  namespace: {{ aporeto_project.enforcers }}
