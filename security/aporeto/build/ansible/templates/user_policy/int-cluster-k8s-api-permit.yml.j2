apiVersion: secops.pathfinder.gov.bc.ca/v1alpha1
kind: NetworkSecurityPolicy
metadata:
  name: int-cluster-k8s-api-permit-{{ item }}
spec:
  description: |
    allow {{ item }} pods to talk to the k8s api
  source:
    - - $namespace={{ item }}
  destination:
    - - int:network=internal-cluster-api-endpoint
