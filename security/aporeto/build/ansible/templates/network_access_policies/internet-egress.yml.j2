label: egress-network-policies
data:
  networkaccesspolicies:
  - name: egress-network-policies
    action: "Allow"
    propagate: true
    applyPolicyMode: "OutgoingTraffic"
    logsEnabled: true
    subject:
    - - "$namespace={{ aporeto_parent_namespace }}/{{ aporeto_namespace }}/default"
    - - "$namespace={{ aporeto_parent_namespace }}/{{ aporeto_namespace }}/logging"
    - - "$namespace={{ aporeto_parent_namespace }}/{{ aporeto_namespace }}/kube-system"
    - - "$namespace={{ aporeto_parent_namespace }}/{{ aporeto_namespace }}/kube-service-catalog"
    - - "$namespace={{ aporeto_parent_namespace }}/{{ aporeto_namespace }}/ocp-monitor"
    object:
    - - ext:network=any