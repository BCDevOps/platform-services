{   
  "canUseAwsMetrics": false,
  "canUseCustomEvents": true,
  "canUseSysdigCapture": true,
  "description": "{{ team.description }}",
  "name": "{{ team_name }}",
  "id": {{ team_data.id | int }},
  "version": {{ team_data.version | int }},
  "show": "container",
  "theme": "#73A1F7",
  "filter": "kubernetes.namespace.name in ({% for namespace in namespaces  %}\"{{ namespace }}\"{% if not loop.last %},{% endif %}{% endfor %} )",
  "userRoles": [
{% for role in team_users_and_roles  %}
    {
      "userId": {{ role.userID }},
      "role": "{{ role.role }}"
    }
{% if not loop.last %}
    ,
{% endif %}
{% endfor %}     
  ]
}